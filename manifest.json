{
  "manifest_version": 2,

  "name": "Chrome example",
  "description": "message example 1.",
  "version": "2.0",

  "browser_action": {
    "default_title": "message example 1!",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "tabs"
  ],
  "content_scripts" : [
    {
      "matches" : ["*://*/*"],
			"js" : ["content.js"]
    }
  ],
  "background":{
    "scripts" : ["event.js"],
    "pesistent" : false
  }
}
