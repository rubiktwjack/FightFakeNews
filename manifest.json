{
  "manifest_version": 2,

  "name": "Chrome example",
  "description": "message example 1.",
  "version": "2.0",

  "browser_action": {
    "default_title": "頁面腳本向事件腳本發送訊息!",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "tabs"
  ],
  "background":{
    "scripts" : ["event.js"],
    "pesistent" : false
  },
  "externally_connectable": {  
    "matches": ["*://localhost/*"]  
}
}
